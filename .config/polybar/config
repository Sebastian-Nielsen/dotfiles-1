modules-left = i3
modules-center = mpd
modules-right = volume wlan backlight-acpi battery date

tray-position = right
tray-padding = 2

[bar/laptop-base]
monitor = eDP-1
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin = 2

font-0 = "FontAwesome:pixelsize=13;1"
font-1 = "System San Francisco Display:pixelsize=13;1"
font-2 = "Symbola:pixelsize=13;1"

modules-left = i3
modules-center = mpd
modules-right = volume wlan backlight-acpi battery date

tray-position = right
