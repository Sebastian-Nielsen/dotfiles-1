color2     = ${xrdb:color10:#00ff00}
color3     = ${xrdb:color11:#dfdfdf}
color4     = ${xrdb:color12:#0000ff}
color5     = ${xrdb:color13:#dfdfdf}
color6     = ${xrdb:color14:#dfdfdf}

background-alt = #444
foreground-alt = #ffffff
primary = ${xrdb:color5:#dfdfdf}
secondary = #e60053
alert = #bd2c40

[bar/hdmi-base]
monitor = HDMI-2
width = 100%
height = 40
;offset-x = 1%
;offset-y = 1%
